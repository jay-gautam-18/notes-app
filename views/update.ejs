<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Update Note</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    /* Slide-up animation for the update form */
    @keyframes slideUp {
      0% { opacity: 0; transform: translateY(20px); }
      100% { opacity: 1; transform: translateY(0); }
    }
    .slide-up {
      animation: slideUp 0.6s ease-out forwards;
    }
    ::-webkit-scrollbar {
      display: none;
    }
  </style>
</head>
<body class="bg-gradient-to-r from-orange-300 via-yellow-200 to-white  min-h-screen flex flex-col items-center justify-center p-6 text-gray-800">

  <!-- Navbar -->
  <nav class="bg-gradient-to-r from-red-600 via-orange-600 to-yellow-500 p-5 shadow-lg rounded-full w-full max-w-4xl mx-auto mb-8">
    <div class="container mx-auto flex justify-between items-center">
      <a href="#" class="text-white text-3xl font-extrabold tracking-wide transform hover:scale-105 transition-transform duration-300 ease-in-out">
        Update Note
      </a>
      <ul class="flex space-x-8 text-white font-semibold">
        <li>
          <a href="/" class="hover:text-blue-300 hover:underline transition duration-300">
            Home
          </a>
        </li>
        <li>
          <a href="/notes" class="hover:text-blue-300 hover:underline transition duration-300">
            Submit a Note
          </a>
        </li>
      </ul>
    </div>
  </nav>

  <!-- Update Note Form Section -->
  <section class="bg-white p-8 rounded-3xl shadow-2xl max-w-2xl mx-auto slide-up">
    <h2 class="text-4xl font-bold text-orange-500 text-center mb-8">Update Your Note</h2>

    <!-- Form Start -->
    <form action="/update/<%= filename %>" method="post" class="space-y-8">
      <!-- Title Input -->
      <div>
        <label for="title" class="block text-gray-700 font-semibold mb-2">Note Title</label>
        <textarea id="content" name="filename" rows="2" required readonly
        class="w-full px-5 py-3 border border-indigo-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-400 transition-all duration-300 bg-gray-50 text-gray-700 font-medium shadow-sm resize-none placeholder-gray-400"><%= filename %></textarea>
      </div>

      <!-- Date Input -->
      <div>
        <label for="date" class="block text-gray-700 font-semibold mb-2">Last Modified Date</label>
        <input type="text" id="date" name="date" value="<%= new Date().toLocaleDateString() %>" 
          class="w-full px-5 py-3 border border-indigo-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-400 transition-all duration-300 bg-gray-100 text-orange-700 font-medium">
      </div>

      <!-- Content Input -->
      <div>
        <label for="content" class="block text-gray-700 font-semibold mb-2">Note Content</label>
        <textarea id="content" name="filedata" rows="2" required
          class="w-full px-5 py-3 border border-indigo-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-400 transition-all duration-300 bg-gray-50 text-gray-700 font-medium shadow-sm resize-none placeholder-gray-400"><%= content %></textarea>
      </div>

      <!-- Buttons -->
      <div class="flex space-x-4">
        <button type="submit"
          class="flex-1 bg-orange-600 text-white px-5 py-3 rounded-lg font-semibold shadow-md transform transition-transform duration-300 hover:scale-105 hover:bg-yellow-500">
          Update Note
        </button>
        <a href="/" class="flex-1 bg-gray-600 text-white px-5 py-3 rounded-lg font-semibold shadow-md transform transition-transform duration-300 hover:scale-105 hover:bg-gray-500 text-center">
          Cancel
        </a>
      </div>
    </form>
    <!-- Form End -->

  </section>

</body>
</html>